# Server Configuration
PORT=4000
WS_PORT=3001
FRONTEND_URL=http://localhost:5173

# Google Gemini API (Required for intent extraction and AI planning)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# OpenAI API (Optional, fallback if Gemini is not available)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Transcription Settings (Using local Whisper model via transformers.js)
TRANSCRIBE_MODEL=Xenova/whisper-small
TRANSCRIBE_FALLBACK_MODEL=
TRANSCRIBE_LANGUAGE=en
TRANSCRIBE_MAX_AUDIO_BYTES=0

# n8n Integration (Optional - for workflow automation)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/voice-automation

# Browser Automation Settings
# Set to 'false' for demo mode (visible browser window)
# Set to 'true' for production (headless mode)
HEADLESS_BROWSER=false
